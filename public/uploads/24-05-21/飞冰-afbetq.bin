​    path: '/user',

​    component: UserLayout,

​    children: [

​      {

​        *// 路由路径*

​        path: '/login',

​        *// 精确匹配*

​        exact: true,

​        *// 路由组件*

​        component: UserLogin,

​        *// 配置路由的高阶组件*

